---
const { url, flashy = false } = Astro.props;
---

<a href={url} target="_blank" class={flashy ? "contact-button" : "button-label"}>
    <slot/>
</a>

<style>
    a {
        text-decoration: none;
    }
    
    .button-label {
        display: inline-block;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        border: 1px solid rgba(89, 89, 89, 1);
        background-color: rgba(51, 51, 51, 0.5);
        color: #75e979;
        cursor: pointer;
        transition: background-color 0.3s ease;
        user-select: none;
    }

    .button-label:hover {
        border-color: #75e979;
    }

    .contact-button {
        text-decoration: none;
        color: black;
        background-color: #75e979;
        padding: 15px 15px;
        border-radius: 25px;
        font-weight: bold;
        transition: 0.15s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-size: 0.8rem;
    }

    .contact-button:hover {
        transform: scale(1.02);
        background-color: white;
        color: #75e979;
    }
</style>
