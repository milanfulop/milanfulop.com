---
const { minWidth = "auto", minHeight = "auto", gridded = false } = Astro.props;
---

<div class={`custom-container ${gridded ? "background-box" : ""}`} style={`--min-width: ${minWidth}; --min-height: ${minHeight};`}>
    <slot />
</div>

<style>
    .custom-container {
        border-radius: 15px;
        color: white;
        z-index: 1;
        border: 1px solid rgba(89, 89, 89, 1);
        background-color: rgba(51, 51, 51, 0.5);
        padding: 25px 25px;
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        min-width: var(--min-width);
        min-height: var(--min-height);
    }

    .custom-container:hover {
        border-color: #75e979;
    }

    @media (max-width: 768px) {
        .custom-container {
            min-width: 90%;
        }
    }

    .background-box {
        position: relative;
        overflow: hidden;
    }
    .background-box::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            repeating-linear-gradient(0deg, transparent 0px, transparent 99px, #f0f0f0 100px, #f0f0f0 101px),
            repeating-linear-gradient(90deg, transparent 0px, transparent 99px, #f0f0f0 100px, #f0f0f0 101px);
        background-size: 100px 100px;
        background-position: bottom center;
        mask-image: linear-gradient(to top, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0));
        z-index: -1;
    }
</style>
