---
const { 
  minWidth = "auto", 
  minHeight = "auto", 
  imageUrl = "https://media.licdn.com/dms/image/v2/D4D03AQHZGkJq-h8XiA/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1726953589200?e=1744243200&v=beta&t=IFIWi22UoIuJXYq6JQz904upJXJzD7pCbuD8Q4yrGMw" 
} = Astro.props;
---

<div class="custom-container" style={`--min-width: ${minWidth}; --min-height: ${minHeight};`}>
    <div class="image-container">
        <img loading="lazy" src={imageUrl} alt="Profile" class="container-image" />
    </div>
    <div class="content-container">
        <slot />
    </div>
</div>

<style>
    .custom-container {
        width: 250px;
        border-radius: 15px;
        color: white;
        z-index: 1;
        border: 1px solid rgba(89, 89, 89, 1);
        background-color: rgba(51, 51, 51, 0.5);
        padding: 5px;
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        min-width: var(--min-width);
        min-height: var(--min-height);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .image-container {
        width: 100%;
    }

    .container-image {
        width: 100%;
        height: 200px;
        border-radius: 10px;
        object-fit: cover;
    }

    .content-container {
        width: 90%;
        padding: 15px 0px;
    }

    .custom-container:hover {
        border-color: #75e979;
    }

    @media (max-width: 768px) {
        .custom-container {
            min-width: 90%;
        }
    }

    @media (max-width: 400px) {
        .custom-container {
            min-height: 250px;
            min-width: 95%;
        }
    }
</style>